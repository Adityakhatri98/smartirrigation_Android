            android:id="@+id/date_val"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Demo"
            android:textSize="20sp" />
    </LinearLayout>

